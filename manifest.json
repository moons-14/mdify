{
    "manifest_version": 3,
    "name": "MDify",
    "description": "Transform any web page into clean, formatted Markdown with just one click.",
    "version": "1.0.0",
    "action": {
        "default_title": "Convert to Markdown"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "scripting",
        "sidePanel",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "src/sidepanel.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    }
}